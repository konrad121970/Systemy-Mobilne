<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_blue</item>
        <item name="colorPrimaryVariant">@color/green_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextFieldsStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/green_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textFieldSize</item>
        <item name="android:padding">@dimen/textFieldPadding</item>
    </style>

</resources>